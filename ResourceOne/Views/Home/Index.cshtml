    }

    }
    }
    }

    @@keyframes slidein {
        from {
            transform: translate3d(0, 0, 0);
        }

        to {
            transform: translate3d(-100%, 0, 0);
        }
    }

    @@keyframes fade-in {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }


    



    @@media (max-width: 576px) {

    /* التحكم في النص داخل الكاروسيل */
    .carousel-caption h1 {
        font-size: 20px !important; /* حجم أصغر للعناوين */
        margin-top: 0px !important;   /* إزالة الهامش العلوي */
        
        margin-left: 500px;
        padding: 10px;
        line-height: 1.4;
    }

    /* جعل النص في منتصف الصورة */
    .carousel-caption {
        position: absolute;
        top: 50% !important;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        width: 90%;
        padding: 0 10px;
    }

    /* الصور داخل الكاروسيل */
    .carousel-item img {
        height: 250px; /* ضبط ارتفاع مناسب للموبايل */
        object-fit: cover;
    }

    /* تعديل الـ button لو استخدمته مستقبلاً */
    .carousel-caption .btn {
        font-size: 14px;
        padding: 8px 16px;
        border-radius: 25px;
    }
}

    @@media (max-width: 576px) {
        .responsive-btn

    {
        width: 300px !important; /* حجم أصغر للموبايل */
        font-size: 13px !important; /* خط أصغر */
        padding: 8px 12px !important; /* تقليل الـ padding */

    }
        /* جعل الأزرار في النص */
        .buttons-container {
            flex-direction: column !important; /* ترتيب عمودي على الموبايل */
            align-items: center !important; /* توسيط العناصر أفقيًا */
        }

    }
    @@media (max-width: 576px) {
        .about-imgg

    {
        margin-right: 50px; /* أو قيمة مناسبة أصغر لو تحب */
    }

    .about-imgg::before {
        right: 50px; /* أو transform: translateX(50px); */
    }

    }


    @@media (max-width: 576px) {
        .mobile-center

    {               
        margin-right: 50px !important;
        width: 90% !important; /* أو أي عرض يناسب الموبايل */
    }

    }




    .containerrr {
        overflow: hidden;
        white-space: nowrap;
        position: relative;
    }

    .slider {
        display: flex;
        width: max-content;
        animation: slidein 30s linear infinite;
    }

    .logos {
        display: flex;
        white-space: nowrap;
    }

    @@keyframes slidein {
        0%

    {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-50%);
    }

    }


    /*about image*/
    /*** About ***/ .about-imgggg {
        position: relative;
        padding-left: 45px;
        z-index: 0; /* مهم علشان يحدد مستوى */
    }

        .about-imgggg::before {
            position: absolute;
            content: "";
            width: 200px;
            height: 300px;
            top: 0;
            left: 0;
            border: 5px solid #f3df29 !important;
            border-radius: 50px;
            animation: animateUpDownn 3s ease-in-out infinite;
            z-index: -1; /* يفضل تحت الصورة */
        }

    @@keyframes animateUpDownn {
        0%

    {
        top: -25px;
    }

    50% {
        top: -45px;
    }

    100% {
        top: -25px;
    }

    }

    /*** Features ***/
    .feature {
        background: linear-gradient(to right, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 1) 50%), url(../img/employees.png) left center no-repeat;
        background-size: cover;
        background-position: left center;
        min-height: 500px; /* ارتفاع مناسب */
        display: flex;
        align-items: center;
        border-radius: 10px; /* لو حابب تضيف حواف ناعمة */
