@model ApplicationFormViewModel
@{
    ViewData["Title"] = "Careers";
}

<style>
      html, body {
        overflow-x: hidden;
    }
    pre {
        font-family: inherit; /* نفس الخط بتاع p */
        font-size: inherit; /* نفس حجم الخط */
        line-height: inherit; /* نفس التباعد */
        white-space: pre-wrap; /* عشان يكسر السطر زي p */
        word-wrap: break-word; /* يمنع خروج النص برا */
        margin: 0; /* زي p */
    }

    @@media (max-width: 576px) {
        .responsive-btn {
            width: 300px !important; /* حجم أصغر للموبايل */
            font-size: 13px !important; /* خط أصغر */
            padding: 8px 12px !important; /* تقليل الـ padding */
        }
        /* جعل الأزرار في النص */
        .buttons-container {
            flex-direction: column !important; /* ترتيب عمودي على الموبايل */
            align-items: center !important; /* توسيط العناصر أفقيًا */
        }
    }

</style>



<div class="position-relative text-center">
    <img class="w-100" style="height:600px; object-fit:cover;" src="~/img/CompetencyInside.jpg" alt="Image">

    <!-- النص فوق الصورة (أسفل يسار) -->
    <div class="position-absolute bottom-0 start-0 w-100 text-start p-4">
        <h1 class="fw-bold display-4 mb-3" style="color:#fff;">Careers</h1>
    </div>
</div>

<div style="background: linear-gradient(to bottom, #000000 0%, #000000 40%, #f3df29 70%, #ffffff 100%); padding-top:70px; padding-bottom:70px;">
</div>



<div class="text-center p-5">
    <div class="mx-auto">
        <h1 style="font-size: 48px; line-height: 1.3; display: inline-block; white-space: nowrap;">
            Join Our 
            <span style="color: #4579bd; font-family:'Calisto MT'; font-style: italic; font-weight: 700; font-size:60px; white-space: nowrap;">
                Team
            </span>
            <hr />
        </h1>
        <pre style="font-size: 18px; line-height: 1.6; margin-top: 15px; font-size:20px;">
At Resources One, our team is our greatest asset. We are a collective of passionate experts, strategic thinkers, and 
dedicated professionals committed to making a real impact on the Egyptian corporate landscape. We foster a culture of
growth, collaboration, and excellence. If you are driven by purpose and want to be part of a leading company that 
empowers both its clients and its employees, we invite you to explore a career with us.
        </pre>
    </div>
</div>







<div class="text-center">
    <h1 class="text-dark">Application Form</h1>
</div>

<div class="container">

    <form class="mt-5" asp-controller="Home" asp-action="Careers" method="post" enctype="multipart/form-data">
        <label class="d-block text-primary">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name"  />
        <span asp-validation-for="FullName" class="text-danger"></span>
        <br />
        <label class="d-block text-primary">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Email"  />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br />
        <label class="d-block text-primary">Phone Number</label>
        <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="Phone Number"  />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <br />
        <label class="d-block text-primary">Age</label>
        <input type="number" class="form-control" asp-for="Age" placeholder="Age"  />
        <span asp-validation-for="Age" class="text-danger"></span>
        <br />
        <label class="d-block text-primary">Address</label>
        <input type="text" class="form-control" asp-for="Address" placeholder="Address"  />
        <span asp-validation-for="Address" class="text-danger"></span>
        <br />
        <label class="d-block text-primary">Years Of Experience</label>
        <select asp-for="YearsOfExperience" class="form-control">
            <option value="">-- Select --</option>
            <option value="0-2">0-2</option>
            <option value="3-5">3-5</option>
            <option value="6-10">6-10</option>
            <option value="+10">+10</option>
            
        </select>
        <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
        <br />
        <br />
        <label class="d-block text-primary">Current Position</label>
        <input type="text" class="form-control" asp-for="CurrentPosition" placeholder="Current position"  />
        <span asp-validation-for="CurrentPosition" class="text-danger"></span>
        <br />
        <label class="d-block text-primary">Upload CV</label>
        <input type="file" class="form-control"asp-for="CV" placeholder="Your CV" required />
          
        <input  type="submit" value="Submit" class="btn btn-primary my-3" style="width:100px;height:50px; border-radius:10px;"/>

    </form>
</div>





<section class="pt-6 pb-6 my-5 text-center" style="background: radial-gradient(circle, #f3df29, #000000);">
    <div class="container">
        <!-- العنوان -->
        <h2 class="fw-bold mb-3" style="color:white">Ready To Build The Future?</h2>

        <!-- خط فاصل مع أيقونة -->
        <div class="d-flex align-items-center justify-content-center mb-3">
            <hr class="mx-2 " style="border-top: 5px solid #fff; opacity: 0.5; width: 200px;">
            @* <i class="bi bi-flower1 text-info fs-3"></i> *@
            <img src="~/favicon.png" style="width:30px;" />
            <hr class="mx-2 " style="border-top: 5px solid #fff; opacity: 0.5; width: 200px;">
        </div>

        <!-- النص -->
        <p class="mb-4" style="color:white">
            Are you a candidate looking for opportunities with Egypt's leading companies?
        </p>

        <!-- الأزرار -->
        <div class="d-flex flex-column flex-sm-row justify-content-center buttons-container gap-3">
            <a href="https://site.resourcesone.com/home/index" class="btn btn-info text-white responsive-btn rounded-pill" style="width:350px; font-size:15px;">
                Go to the Job Search Portal  <i class="bi bi-box-arrow-up-right ms-2"></i>
            </a>
            <a asp-controller="Home" asp-action="About" class="btn btn-info  text-white responsive-btn rounded-pill" style="width:350px; font-size:15px;">
                Check Our Story  <i class="bi bi-box-arrow-up-right ms-2"></i>
            </a>
        </div>
    </div>
</section>



@section Scripts{


    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.options = {
                    "closeButton": true,           // زرار X
                    "progressBar": true,           // شريط تقدم
                    "positionClass": "toast-bottom-right", // تحت يمين
                    "timeOut": "5000"              // 5 ثواني
                };
                toastr.success(successMessage);
            }
        });
    </script>
}