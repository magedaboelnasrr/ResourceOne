    .nav-times {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 85%;
        position: relative;
    }

        .nav-times button {
            background: transparent;
            border: none; /* شيل البوردر */
            border-radius: 0; /* شيل الدائرة */
            max-width: unset;
            max-height: unset;
            min-width: unset;
            min-height: unset;
            cursor: pointer;
            position: relative;
        }

            .nav-times button .innerCircle,
            .nav-times button .horLine {
                display: none; /* اخفاء الدائرة الداخلية والخط الصغير */
            }

    .time-divider {
        height: 0.3px;
        border-radius: 3px;
        background-color: #fff;
        position: absolute;
        width: 100%;
    }

    .nav-times button:last-of-type {
        margin-right: 0;
    }



    .nav-times button .innerCircle {
        width: 70%;
        height: 70%;
        border-radius: 50%;
        transition: width 0.3s linear, height 0.3s linear;
        background-color: transparent;
    }

    .nav-times button:hover .innerCircle, .nav-times button.active .innerCircle {
        background-color: #fff;
    }

    .nav-times button.active span, .nav-times button:hover span {
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        transition: opacity 0.5s ease;
        opacity: 1;
    }

    .nav-times button .text {
        bottom: 38px;
        font-weight: 600;
        color: #fff;
        opacity: 1
    }



    .nav-times button.active .text, .nav-times button:hover .text {
        color: #fff;
    }

    .nav-times button .horLine {
        width: 3px;
        background: transparent;
        height: 10px;
        bottom: 22px;
        border-bottom: 1px solid transparent;
        border-top: 1px solid transparent;
        border-radius: 3px;
    }

    .nav-times button.active .horLine, .nav-times button:hover .horLine {
        width: 3px;
        background: #fff;
        height: 10px;
        bottom: 22px;
        border-bottom: 1px solid #fff;
        border-top: 1px solid #fff;
        border-radius: 3px;
