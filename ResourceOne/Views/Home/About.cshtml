@section Scripts {

    <script src="https://kit.fontawesome.com/14554c09c9.js" crossorigin="anonymous"></script>

    <script>
        const slider = document.querySelector('.slider-container'),
            times = Array.from(document.querySelectorAll('.time'));

        //Get scroll position
        let position = window.pageXOffset / (document.documentElement.clientWidth * times.length + 1);

        let section = position * times.length;
        let percentage = section % 1;

        let sectionNo = section.toString().split('.')[0];
        let size = (100 - Math.round(percentage * 100));
        let increase = Math.round(percentage * 100);

        //Global variables
        let isDragging = false,
            startPos = 0;
        currentTranslate = 0;
        prevTranslate = 0;
        animationID = 0;
        currentIdx = 0;

        handleResize();

        //Adjust View and Container height when window is resized
        function handleResize() {
            //Set viewport and container height
            view = document.documentElement.clientWidth
            containerHeight = document.documentElement.clientWidth;


            setNavBubble();
            setPositionByIndex(currentIdx);
        }

        window.addEventListener('resize', function () {
            handleResize();
        })

        //Hide arrows if first or last bubble is active
        function checkIndex() {
            if (currentIdx === 0) {
                document.getElementById("prevArrow").style.visibility = "hidden";
            } else {
                document.getElementById("prevArrow").style.visibility = "visible";
            }

            if (currentIdx === times.length - 1) {
                document.getElementById("nextArrow").style.visibility = "hidden";
            } else {
                document.getElementById("nextArrow").style.visibility = "visible";
            }
        }

        checkIndex();

        function nextTime() {
            if (currentIdx < times.length - 1) {
                currentIdx++
            }

            setPositionByIndex(currentIdx);
        }

        function prevTime() {
            if (currentIdx > 0) {
                currentIdx--
            }

            setPositionByIndex(currentIdx);
        }

        function setNavBubble() {
            //Handle active navigation bubble
            let buttons = document.querySelectorAll(`[data-destination]`);
            buttons.forEach((button, i) => {
                if (buttons[i].dataset.destination === currentIdx.toString()) {
                    buttons[i].classList.add('active');
                    buttons[i].classList.remove('inactive');
                } else {
                    buttons[i].classList.remove('active');
                    buttons[i].classList.add('inactive');
                }
            })
        }

        times.forEach((time, index) => {
            const timeImage = time.querySelector('img');
            if (timeImage) {
                timeImage.addEventListener("dragstart", (e) => e.preventDefault());
            }

            //Wheel events
            //time.addEventListener("wheel", onWheel);

            //Touch events
            time.addEventListener('touchstart', touchStart(index));
            time.addEventListener('touchend', touchEnd);
            time.addEventListener('touchmove', touchMove);

            //Mouse events
            time.addEventListener('mousedown', touchStart(index));
            time.addEventListener('mouseup', touchEnd);
            //time.addEventListener('mouseleave', touchEnd);
            time.addEventListener('mousemove', touchMove);
        });

        //Disable right click menu
        /*window.oncontextmenu = function(event){
          event.preventDefault();
          event.stopPropagation();
          return false;
        }*/

        function onWheel(event) {
            if (event.deltaY == 0) return;

            event.preventDefault();

            const scrollAmt = event.deltaY;
            slider.classList.remove('grabbing');
            isDragging = false;
            cancelAnimationFrame(animationID);

            if (scrollAmt < -10 && currentIdx < times.length - 1) {
                currentIdx++;
            }

            if (scrollAmt > 10 && currentIdx > 0) {
                currentIdx--;
            }

            handleContentAnimation(times[currentIdx]);
            resetAnimations(times);

            setPositionByIndex();
        }

        function touchStart(idx) {
            return function (event) {
                currentIdx = idx;
                startPos = getPositionX(event);
                isDragging = true;

                setNavBubble();
                resetAnimations(times);
                animationID = requestAnimationFrame(animation);
                slider.classList.add('grabbing');
            }
        }

        function touchEnd() {
            isDragging = false;
            cancelAnimationFrame(animationID);

            const movedBy = currentTranslate - prevTranslate;

            if (movedBy < -100 && currentIdx < times.length - 1) {
                currentIdx++;
            }

            if (movedBy > 100 && currentIdx > 0) {
                currentIdx--;
            }

            setNavBubble();
            handleContentAnimation(times[currentIdx]);
            resetAnimations(times);

            setPositionByIndex();
            slider.classList.remove('grabbing');
        }

        function touchMove(event) {
            if (isDragging) {
                const currentPosition = getPositionX(event);
                currentTranslate = prevTranslate + currentPosition - startPos;
            }
        }

        function getPositionX(event) {
            return event.type.includes('mouse')
                ? event.pageX
                : event.touches[0].clientX;
        }

        function animation() {
            setSliderPosition();
            if (isDragging) requestAnimationFrame(animation);
        }

        function setSliderPosition() {
            slider.style.transform = `translateX(${currentTranslate}px)`;
        }

        function setPositionByIndex(idx) {
            resetAnimations(times);

            currentIdx = idx === 0 ? 0 : idx ? idx : currentIdx;;

            currentTranslate = currentIdx * -window.innerWidth;
            prevTranslate = currentTranslate;

            setSliderPosition();
            if (idx) {
                handleContentAnimation(times[currentIdx]);
            }

            setNavBubble();
            checkIndex();
        }

        function handleContentAnimation(time) {
            //Check for animation classes then apply the given animation
            let nodes = time.children[0].childNodes;
            for (let i = 0; i < nodes.length; i++) {
                if (nodes[i].classList && nodes[i].classList.contains('fade')) {
                    nodes[i].style.opacity = `1`;
                }

                if (nodes[i].classList && nodes[i].classList.contains('slide-up')) {
                    nodes[i].style.transform = `translateY(0)`;
                }

                if (nodes[i].classList && nodes[i].classList.contains('slide-down')) {
                    nodes[i].style.transform = `translateY(0)`;
                }

                if (nodes[i].classList && nodes[i].classList.contains('slide-left')) {
                    nodes[i].style.transform = `translateX(0)`;
                }

                if (nodes[i].classList && nodes[i].classList.contains('slide-right')) {
                    nodes[i].style.transform = `translateX(0)`;
                }
            }
        }

        function resetAnimations(times) {
            //Check for animation classes then apply the given animation
            times.forEach((time, idx) => {
                let nodes = time.children[0].childNodes;
                if (currentIdx !== idx) {
                    for (let i = 0; i < nodes.length; i++) {
                        if (nodes[i].classList && nodes[i].classList.contains('fade')) {
                            nodes[i].style.opacity = '';
                        }

                        if (nodes[i].classList && nodes[i].classList.contains('slide-up')) {
                            nodes[i].style.transform = '';
                        }

                        if (nodes[i].classList && nodes[i].classList.contains('slide-down')) {
                            nodes[i].style.transform = '';
                        }

                        if (nodes[i].classList && nodes[i].classList.contains('slide-left')) {
                            nodes[i].style.transform = '';
                        }

                        if (nodes[i].classList && nodes[i].classList.contains('slide-right')) {
                            nodes[i].style.transform = '';
                        }
                    }
                }
            })
        }
    </script>
}
