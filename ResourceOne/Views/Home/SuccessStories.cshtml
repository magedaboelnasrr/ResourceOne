@{
    ViewData["Title"] = "SuccessStories";
}




<style>

    body, html {
        background-color: white;
        overflow-x: hidden
    }

    .container {
        overflow: hidden;
        .slider

    {
        animation: slidein 30s linear infinite;
        white-space: nowrap;
        .logos

    {
        width: 100%;
        display: inline-block;
        margin: 0px 0;
        .fab

    {
        width: calc(100% / 5);
        animation: fade-in 0.5s cubic-bezier(0.455, 0.03, 0.515, 0.955) forwards;
    }

    }
    }
    }

    @@keyframes slidein {
        from {
            transform: translate3d(0, 0, 0);
        }

        to {
            transform: translate3d(-100%, 0, 0);
        }
    }

    @@keyframes fade-in {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }


    /* الأساسيات للشاشات الكبيرة */
    .success-title {
        font-size: 48px;
        line-height: 1.3;
        display: inline-block;
        white-space: nowrap; /* يمنع النزول لسطر جديد */
        text-align: center;
    }

        .success-title span {
            color: #4579bd;
            font-family: 'Calisto MT';
            font-style: italic;
            font-weight: 700;
            font-size: 50px;
            white-space: nowrap;
        }

    /* شاشات متوسطة (تابلت) */
    @@media (max-width: 992px) {
        .success-title {
            font-size: 38px;
        }

            .success-title span {
                font-size: 42px;
            }
    }

    /* شاشات صغيرة (موبايل) */
    @@media (max-width: 576px) {
        .success-title {
            font-size: 28px;
            line-height: 1.4;
            display: block; /* يسمح بالكسر للسطر الثاني */
            white-space: normal; /* يتيح كسر النص */
            text-align: center;
        }

            .success-title span {
                font-size: 36px;
                display: block; /* كلمة Yours في سطر مستقل */
                margin-top: 8px;
                white-space: normal;
            }
    }



    /* ===== الأساسيات (شاشات كبيرة) ===== */
    .partners-title {
        border-radius: 50px;
        max-width: 600px; /* عرض ثابت بدل margin-left/right كبير */
        margin: 0 auto; /* يجعلها في المنتصف */
    }

        .partners-title h4 {
            font-size: 24px;
        }

    .partners-text {
        max-width: 800px; /* النص يكون محدود العرض */
        margin: 0 auto;
    }

        .partners-text p {
            color: dimgray;
            font-size: 18px;
            line-height: 1.6;
        }

    /* ===== شاشات متوسطة (تابلت) ===== */
    @@media (max-width: 992px) {
        .partners-title {
            max-width: 450px;
            padding: 15px;
        }

            .partners-title h4 {
                font-size: 22px;
            }

        .partners-text {
            max-width: 600px;
        }

            .partners-text p {
                font-size: 17px;
            }
    }

    /* ===== شاشات صغيرة (موبايل) ===== */
    @@media (max-width: 576px) {
        .partners-title {
            max-width: 90%; /* تقريباً ملء الشاشة مع ترك مسافة */
            padding: 12px;
        }

            .partners-title h4 {
                font-size: 20px;
            }

        .partners-text {
            max-width: 90%;
            margin-top: 20px;
        }

            .partners-text p {
                font-size: 16px;
                line-height: 1.5;
            }
    }


    /* ===== شاشات صغيرة (موبايل) ===== */
    @@media (max-width: 576px) {
        /* ===== عنوان Success Stories ===== */
        .success-title {
            font-size: 28px;
            line-height: 1.4;
            display: block; /* يسمح بالكسر للسطر الثاني */
            white-space: normal; /* يتيح كسر النص */
            text-align: center;
        }

            .success-title span {
                font-size: 32px;
                display: block; /* كلمة Yours في سطر مستقل */
                margin-top: 8px;
                white-space: normal;
            }
        /* ===== Partners Section ===== */
        .partners-title {
            max-width: 90%; /* تقريباً ملء الشاشة مع ترك مسافة */
            padding: 12px;
        }

            .partners-title h4 {
                font-size: 18px;
            }

        .partners-text {
            max-width: 90%;
            margin-top: 20px;
        }

            .partners-text p {
                font-size: 15px;
                line-height: 1.5;
            }
        /* ===== الكروت ===== */
        .feature-item {
            padding: 20px !important;
            border-radius: 30px !important;
            text-align: center;
        }
        /* ===== قسم الصور والشهادات ===== */
        .d-flex.justify-content-around.align-items-center.flex-wrap {
            flex-direction: column !important;
        }

            .d-flex.justify-content-around.align-items-center.flex-wrap img {
                width: 100% !important;
                max-width: 300px;
            }
            /* إخفاء الفاصل العمودي */
            .d-flex.justify-content-around.align-items-center.flex-wrap > div[style*="background-color:white"] {
                display: none;
            }
        /* ===== logos ===== */
        .logos img {
            width: 120px !important;
            margin: 5px;
        }
        /* ===== قسم الأسئلة ===== */
        .row.g-0.align-items-center.justify-content-end {
            margin-left: 0 !important;
        }

        .accordion-button {
            font-size: 14px;
            padding: 10px;
        }

        .accordion-body {
            font-size: 13px;
        }
    }


    @@media (max-width: 576px) {
        .responsive-btn {
            width: 300px !important; /* حجم أصغر للموبايل */
            font-size: 13px !important; /* خط أصغر */
            padding: 8px 12px !important; /* تقليل الـ padding */
        }
        /* جعل الأزرار في النص */
        .buttons-container {
            flex-direction: column !important; /* ترتيب عمودي على الموبايل */
            align-items: center !important; /* توسيط العناصر أفقيًا */
        }
    }

    .feature {
        background: linear-gradient(to right, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 1) 50%), url(../img/CompetencyInside.jpg) left center no-repeat;
        background-size: cover;
