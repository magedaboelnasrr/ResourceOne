
@{
    ViewData["Title"] = "Service";
}
<style>

    html, body {
        overflow-x: hidden;
    }

    pre {
        font-family: inherit; /* نفس الخط بتاع p */
        font-size: inherit; /* نفس حجم الخط */
        line-height: inherit; /* نفس التباعد */
        white-space: pre-wrap; /* عشان يكسر السطر زي p */
        word-wrap: break-word; /* يمنع خروج النص برا */
        margin: 0; /* زي p */
    }


     section.last-section {
        background: radial-gradient(circle, #f3df29, #000000);
        margin-bottom: 50px;
        text-align: center;
        padding: 50px 15px;
    }

    section.last-section h2 {
        color: white;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    section.last-section p {
        color: white;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    section.last-section .divider {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        gap: 10px;
    }

    section.last-section .divider hr {
        border-top: 5px solid #fff;
        opacity: 0.5;
        width: 200px;
        margin: 0;
    }

    section.last-section .divider img {
        width: 30px;
    }

    section.last-section .btn-custom {
        width: 350px;
        font-size: 15px;
        padding: 12px 20px;
    }

    /* التابلت */
    @@media (max-width: 992px) {
        section.last-section h2 {
            font-size: 1.8rem;
        }

        section.last-section .divider hr {
            width: 150px;
        }

        section.last-section .btn-custom {
            width: 300px;
        }
    }

    /* الموبايل */
    @@media (max-width: 576px) {
        section.last-section {
            padding: 40px 10px;
        }

        section.last-section h2 {
            font-size: 1.5rem;
            line-height: 1.4;
        }

        section.last-section .divider {
            flex-direction: column;
            gap: 15px;
        }

        section.last-section .divider hr {
            width: 80%;
        }

        section.last-section .btn-custom {
            width: 100%;
        }

        section.last-section .d-flex {
            flex-direction: column !important;
            gap: 15px;
        }
    }



    .responsive-title {
    font-size: 48px;
    line-height: 1.3;
    display: inline-block;
    white-space: nowrap;
    text-align: center;
}

.responsive-title span {
    color: #4579bd;
    font-family: 'Calisto MT';
    font-style: italic;
    font-weight: 700;
    font-size: 60px;
    white-space: nowrap;
}

/* للشاشات المتوسطة */
@@media (max-width: 992px) {
    .responsive-title {
        font-size: 36px;
    }

    .responsive-title span {
        font-size: 48px;
    }
}

/* للشاشات الصغيرة مثل الموبايل */
@@media (max-width: 576px) {
    .responsive-title {
        font-size: 28px;
        line-height: 1.4;
        display: block;
        white-space: normal; /* عشان يسمح بالكسر */
    }

    .responsive-title span {
        font-size: 36px;
        display: block; /* يخلي كلمة Challenges تنزل في سطر جديد */
        margin-top: 10px;
        white-space: normal;
    }
}

    @@media (max-width: 576px) {
        .responsive-btn {
            width: 300px !important; /* حجم أصغر للموبايل */
            font-size: 13px !important; /* خط أصغر */
            padding: 8px 12px !important; /* تقليل الـ padding */
        }
        /* جعل الأزرار في النص */
        .buttons-container {
            flex-direction: column !important; /* ترتيب عمودي على الموبايل */
            align-items: center !important; /* توسيط العناصر أفقيًا */
        }
    }

    /*** Features ***/
    .feature {
        background: linear-gradient(to right, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 1) 50%), url(../img/CompetencyInside.jpg) left center no-repeat;
        background-size: cover;
        background-position: left center;
        min-height: 500px; /* ارتفاع مناسب */
        display: flex;
        align-items: center;
        border-radius: 10px; /* لو حابب تضيف حواف ناعمة */
    }

</style>

