<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - ResourceOne</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/favicon.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@700;800&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        /* عند تمرير الماوس على عناصر الـ dropdown */
        .dropdown-menu .dropdown-item:hover {
            background-color: #5c94d1 !important;
            color: #fff !important; /* لو عايز النص يبقى أبيض */
        }

        /* لو عايز كمان تخلي النص يتغير عند التركيز (focus) */
        .dropdown-menu .dropdown-item:focus {
            background-color: #5c94d1 !important;
            color: #fff !important;
        }


        /* على شاشات الموبايل: يفتح لتحت بعرض القائمة */
        @@media (max-width: 576px) {
            .custom-dropdown

        {
            position: static !important; /* خلي القائمة جزء من التدفق الطبيعي */
            width:100% !important; /* عرض كامل */
            
            box-shadow: none !important; /* شيل الظل */
            border-radius: 0 !important; /* بدون زوايا دائرية */
        }

        @@media (max-width: 767px) {
            .footer-container

        {
            margin-left: 0 !important;
            margin-right: 0 !important;
        }

        }

            @@media (max-width: 767px) {
                /* تعديل اتجاه القائمة في وضع الموبايل */
                .navbar .dropdown-menu {
                    position: absolute !important;
                    left: -180px !important; /* غيّر القيمة حسب عرض القائمة */
                    top: 0 !important;
                    transform: none !important;
                }

                .navbar .dropdown:hover .dropdown-menu,
                .navbar .dropdown.show .dropdown-menu {
                    display: block;
                }
            }

            @@media (max-width: 767px) {
                .navbar .custom-dropdown {
                    position: absolute !important;
                    left: -200px !important;
                    top: 0 !important;
                }
            }
    </style>
</head>


<body>
    <header>
        <!-- Topbar Start -->
        <div class="container-fluid text-white d-none d-lg-flex wow fadeIn"
             data-wow-delay="0.1s" style="background-color:black;">

            <div class="d-flex align-items-center justify-content-between w-100 py-3 px-4">

                <!-- اللوجو أقصى اليسار -->
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo s.webp" style="width:200px;" />
                </a>

                <!-- بقية الـ content أقصى اليمين -->
                <div class="d-flex align-items-center">

                    <!-- الإيميل -->
                    <small class="ms-4">
                        <i class="fa fa-envelope me-2"></i>                       
                        <a href="mailto:info@resourcesone.com"
                           class="text-white text-decoration-none">
                            info@resourcesone.com
                        </a>
                    </small>

                    <!-- التليفونات -->
                    <small class="ms-4">
                        <i class="fa fa-phone-alt me-2"></i>
                        <a href="tel:+201157705757" class="text-white text-decoration-none">
                            +20-1157705757
                        </a>
                    </small>

                    <!-- السوشيال ميديا -->
                    <div class="ms-3 d-flex">
                        <a class="btn btn-sm-square btn-light text-primary ms-2 rounded-circle"
                           href="https://www.facebook.com/profile.php?id=100063753953788#" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-danger ms-2 rounded-circle"
                           href="https://www.youtube.com/channel/UCTOrjvo-NAIwsOcwu6svEhA" target="_blank">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-success ms-2 rounded-circle"
                           href="https://www.linkedin.com/company/resources-one/" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-warning ms-2 rounded-circle"
                           href="https://t.me/ResourcesOne" target="_blank">
                            <i class="fab fa-telegram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Topbar End -->
        <!-- Navbar Start -->
        <div class="container-fluid bg-white sticky-top fadeIn mt-1" data-wow-delay="0.1s">
            <div style="margin-left: 200px; margin-right:200px;">
                <nav class="navbar navbar-expand-lg bg-white navbar-light p-lg-0">
                    <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse"
                            data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <!-- الناف بار الأساسي -->
                        <div class="navbar-nav">
                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link @(Context.Request.Path.StartsWithSegments("/Home/Index") ? "active" : "")">Home</a>
                            <a asp-controller="Home" asp-action="About" class="nav-item nav-link @(Context.Request.Path.StartsWithSegments("/Home/About") ? "active" : "")">About</a>

                            <div class="nav-item dropdown d-flex align-items-center">
                                <!-- لينك Services -->
                                <a asp-controller="Home" asp-action="Service"
                                   class="nav-link m-0 p-0 @(Context.Request.Path.StartsWithSegments("/Home/Service") ? "active" : "")">
                                    Services
                                </a>

                                <!-- السهم فقط لفتح الـ Dropdown -->
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false"></a>

                                <div class="dropdown-menu bg-light rounded-0 rounded-bottom m-0 custom-dropdown">
                                    <a asp-controller="Services" asp-action="CompetencyAssessments" class="dropdown-item">Competency Assessments</a>
                                    <a asp-controller="Services" asp-action="PayrollOutsourcing" class="dropdown-item">Payroll Outsourcing</a>
                                    <a asp-controller="Services" asp-action="B2BTraining" class="dropdown-item">B2B Training</a>
                                    <a asp-controller="Services" asp-action="RecruitmentServices" class="dropdown-item">Recruitment Services</a>
                                    <a asp-controller="Services" asp-action="SalarySurveys" class="dropdown-item">Salary Surveys</a>
                                    <a asp-controller="Services" asp-action="GovernanceRestructuring" class="dropdown-item">Governance & Restructuring</a>
                                    <a asp-controller="Services" asp-action="TechnicalEducationInitiative" class="dropdown-item">Technical Education Initiative</a>
                                </div>
                            </div>


                            
                            <a asp-controller="Home" asp-action="SuccessStories" class="nav-item nav-link @(Context.Request.Path.StartsWithSegments("/Home/SuccessStories") ? "active" : "")">Success Stories</a>
                            <a asp-controller="Home" asp-action="InsightsHub" class="nav-item nav-link @(Context.Request.Path.StartsWithSegments("/Home/InsightsHub") ? "active" : "")">Insights Hub</a>
                            <a asp-controller="Home" asp-action="Careers" class="nav-item nav-link @(Context.Request.Path.StartsWithSegments("/Home/Careers") ? "active" : "")">Careers</a>
                            <a href="https://site.resourcesone.com/home/index" class="nav-item nav-link" target="_blank">Candidates' Portal</a>
                            <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link @(Context.Request.Path.StartsWithSegments("/Home/Contact") ? "active" : "")">Contact</a>
                        </div>

                        <!-- روابط اليمين -->
                        <div class="navbar-nav ms-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-controller="Account" asp-action="Logout" method="get" class="d-inline">
                                    <button type="submit" class="btn btn-danger p-3 btn-sm rounded-pill px-3">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login"
                                   class="btn btn-primary  rounded-pill me-2" style="width:150px; height:50px; padding-bottom:20px; padding-top:12px;">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                               @*  <a asp-controller="Account" asp-action="Register"
                                   class="btn btn-primary btn-sm rounded-pill p-3">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a> *@ 
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <!-- Navbar End -->
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark footer py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="footer-container" style="margin-left:150px; margin-right:50px;">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6" style="margin-top:100px;">
                    <a asp-controller="Home" asp-action="Index"><img src="~/img/logo s.webp" style="width:300px;" /></a>

                    <p style="color:lightgray; margin-top:20px;">
                        Your trusted partner for strategic HR <br>
                        solutions and data-driven insights <br />since 2007
                    </p>

                    <div class="pt-3 " style="flex-direction:row;display:flex;">
                        <a class="btn btn-square btn-light me-2 rounded-circle text-primary" target="_blank" href="https://www.facebook.com/profile.php?id=100063753953788#">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-square btn-light me-2 rounded-circle text-danger" target="_blank" href="https://www.youtube.com/channel/UCTOrjvo-NAIwsOcwu6svEhA">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a class="btn btn-square btn-light me-2 rounded-circle text-success" target="_blank" href="https://www.linkedin.com/company/resources-one/">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="btn btn-square btn-light me-2 rounded-circle text-warning" target="_blank" href="https://t.me/ResourcesOne">
                            <i class="fab fa-telegram"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6" style="margin-top:120px;">
                    <h5 class="text-uppercase text-light ">Our Office</h5>

                    <p class="d-flex align-items-start mb-2 " style="color:lightgray">
                        <i class="fa fa-map-marker-alt me-3 mt-1 text-primary"></i>
                        <span>No7 Ibrahim Shehata St, At Taseah, Nasr City, Cairo Governorate</span>
                    </p>

                    <p class="d-flex align-items-start mb-2 " style="color:lightgray">
                        <i class="fa fa-phone-alt me-3 mt-1 text-primary"></i>
                        <span>
                            <a href="tel:+201157705757" class=" text-decoration-none" style="color:lightgray">+20-1157705757</a><br />
                            <a href="tel:+201158681919" class=" text-decoration-none" style="color:lightgray">+20-1158681919</a><br />
                            <a href="tel:0223571689" class=" text-decoration-none" style="color:lightgray; margin-left:8px;">0223571689</a>
                        </span>
                    </p>

                    <p class="d-flex align-items-start mb-2" style="color:lightgray">
                        <i class="fa fa-envelope me-3 mt-1 text-primary"></i>
                        <span>
                            <a href="mailto:Info@resourcesone.com" style="color:lightgray" class="text-decoration-none">Info@resourcesone.com</a>
                        </span>
                    </p>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-uppercase text-light " style="margin-top:70px;">Quick Links</h5>
                    <a class="btn btn-link" style="color:lightgray" asp-controller="Home" asp-action="About">About Us</a>
                    <a class="btn btn-link" style="color:lightgray" asp-controller="Home" asp-action="Contact">Contact Us</a>
                    <a class="btn btn-link" style="color:lightgray" asp-controller="Home" asp-action="Service">Our Services</a>

                </div>
                @await Html.PartialAsync("_NewsletterPartial", new ResourceOne.Models.NewsLetter())
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid text-body copyright py-4" style="background-color:black">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <!-- النص الأساسي -->
                <div class="col-md-8 text-center text-md-start mb-3 mb-md-0 text-muted">
                    All Right Reserved. Developed By
                    <a class="fw-semi-bold text-muted" href="https://viewhat.online/" target="_blank">Viewhat</a>
                    &copy; @DateTime.Now.Year
                </div>

                <!-- اللينكات على اليمين -->
                <div class="col-md-4 text-center text-md-end ">
                    <a class="btn btn-link text-muted" asp-controller="Home" asp-action="TermsOfUse">Terms Of Use</a>
                    <a class="btn btn-link text-muted" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>





    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(function () {
            var successMessage = '@TempData["NewsLetter"]';
            if (successMessage) {
                toastr.options = {
                    "closeButton": true,           // زرار X
                    "progressBar": true,           // شريط تقدم
                    "positionClass": "toast-bottom-right", // تحت يمين
                    "timeOut": "5000"              // 5 ثواني
                };
                toastr.success(successMessage);
            }
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
