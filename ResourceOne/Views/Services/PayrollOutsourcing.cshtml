            flex-direction: column !important; /* ترتيب عمودي على الموبايل */
            align-items: center !important; /* توسيط العناصر أفقيًا */
        }
    }

    @@media (max-width: 767px) {
        h2 .custom-heading span

    {
        font-size: 24px !important; /* الحجم المناسب للموبايل */
        white-space: normal !important; /* يسمح للكلام ينزل على سطرين */
    }

    h2.custom-heading {
        font-size: 20px !important; /* كمان نضبط العنوان الأساسي */
        line-height: 1.4;
        padding: 0 10px; /* عشان الكلام ما يلزقش في أطراف الشاشة */
    }

    }

    /* إخفاء كسر السطر في الشاشات الكبيرة */
    .mobile-break {
        display: none;
    }

    /* إظهاره فقط في الموبايل */
    @@media (max-width: 767px) {
        .mobile-break

    {
        display: inline;
    }

    h2.custom-heading span {
        white-space: normal !important; /* عشان يسمح بالنزول لسطر جديد */
        font-size: 24px !important; /* تصغير الخط كمان للموبايل */
    }

    }

    .section-title {
        font-weight: 700;
        font-size: 1.2rem;
    }

    .check-item::before {
        content: "☑ ";
        color: #000;
    }

    .logo {
        max-width: 180px;
        height: auto;
    }
</style>


