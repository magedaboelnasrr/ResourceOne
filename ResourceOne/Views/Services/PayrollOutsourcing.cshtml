    }

    .custom-heading {
        font-size: 2.5rem; /* نفس حجم الـ h1 الافتراضي */
        font-weight: bold;
    }



    @@media (max-width: 576px) {
        .responsive-btn {
            width: 350px !important; /* حجم أصغر للموبايل */
