
@{
    ViewData["Title"] = "SalarySurveys";
}

<style>
    html, body {
        overflow-x: hidden;
    }
    .custom-heading {
        font-size: 2.5rem; /* نفس حجم الـ h1 الافتراضي */
        font-weight: bold;
    }
    @@media (max-width: 576px) {
        .responsive-btn {
            width: 300px !important; /* حجم أصغر للموبايل */
            font-size: 13px !important; /* خط أصغر */
            padding: 8px 12px !important; /* تقليل الـ padding */
        }
        /* جعل الأزرار في النص */
        .buttons-container {
            flex-direction: column !important; /* ترتيب عمودي على الموبايل */
            align-items: center !important; /* توسيط العناصر أفقيًا */
        }
    }

    .feature {
        background: linear-gradient(to right, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 1) 50%), url(../img/Salary-Surveys-down.png) left center no-repeat;
        background-size: cover;
        background-position: left center;
        min-height: 500px; /* ارتفاع مناسب */
        display: flex;
        align-items: center;
        border-radius: 10px; /* لو حابب تضيف حواف ناعمة */
    }

    .section-title {
        font-weight: 700;
        font-size: 1.2rem;
    }

    .check-item::before {
        content: "☑ ";
        color: #000;
    }

    .highlight {
        color: #0056b3;
        font-weight: 600;
    }

    .logo {
        max-width: 180px;
        height: auto;
    }
</style>


<div class="position-relative text-center">
    <img class="w-100" style="background-size:100%; object-fit:cover;" src="~/img/Salary-Surveys.png" alt="Image">

    <!-- النص فوق الصورة (أسفل يسار) -->
    <div class="position-absolute bottom-0 start-0 w-100 text-start p-4">
        <h1 class="fw-bold display-4 mb-3" style="color:white">Salary Survey</h1>
    </div>
</div>



